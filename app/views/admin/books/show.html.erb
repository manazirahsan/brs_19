<% provide(:title, t(:books_page_title)) %>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <div class="clearfix">
        <%= link_to t(:books_show_all_books_btn), admin_books_path, class: "btn btn-primary" %>
        <div class="pull-right">
          <%= link_to t(:book_index_edit_btn), edit_admin_book_path(@book), class: "btn btn-md btn-warning" %>
          <%= link_to t(:book_index_delete_btn), admin_book_path(@book), method: :delete, data: {confirm: t(:make_sure)}, class: "btn btn-md btn-danger" %>
          <%= link_to t(:book_index_review_btn), "#", class: "btn btn-md btn-info" %>
          <%= link_to t(:book_index_favorite_btn), "#", class: "btn btn-md btn-success" %>
          <%= link_to t(:book_index_status_read_btn), "#", class: "btn btn-md btn-default" %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered">
      <tbody>
      <tr>
        <td>
          <%= t :book_model_title %>
        </td>
        <td>
          <%= @book.title %>
        </td>
      </tr>
      <tr>
        <td>
          <%= t :book_model_author %>
        </td>
        <td>
          <%= @book.author %>
        </td>
      </tr>
      <tr>
        <td>
          <%= t :book_model_publish_date %>
        </td>
        <td>
          <%= @book.publish_date %>
        </td>
      </tr>
      <tr>
        <td>
          <%= t :book_model_number_of_pages %>
        </td>
        <td>
          <%= @book.num_of_pages %>
        </td>
      </tr>
      <tr>
        <td>
          <%= t :book_model_category %>
        </td>
        <td>
          <%= @book.category.name %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="">
    <!--This is placeholder for book images-->
  </div>
</div>